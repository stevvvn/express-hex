#!/usr/bin/env node
'use strict';
const { bootstrap } = require(`${ __dirname }/../index`);
const fs = require('fs');
const { run, getMigrationsFromPath, getImpl } = require('abstract-migrator');
const path = require('path');

if (require.main === module) {
	(async () => {
		const { conf } = await bootstrap(process.argv[2] ? process.argv[2] : process.cwd());
		const impl = await run(conf);
		await impl.close();
		process.exit();
	})();
}
